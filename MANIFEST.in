# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Include configuration files
include pyproject.toml
include setup.py
include setup.cfg
recursive-include config *.yaml *.yml *.json

# Include requirements
include requirements.txt
include requirements-dev.txt

# Exclude unnecessary files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude tests *
recursive-exclude notebooks *
recursive-exclude data *
recursive-exclude logs *
recursive-exclude checkpoints *

# Include documentation
recursive-include docs *.rst *.md *.txt *.py

# Include example scripts
recursive-include scripts *.py

# Include type stubs
recursive-include */py.typed
